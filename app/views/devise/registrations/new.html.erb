<center><h2>회원가입</h2></center>
<div class="row-fluid">
	<div class="span4 offset2">
		<h4>직접 가입하기</h4>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
<%= f.input :email, :label=>"이메일", :required => true, :autofocus => true %>
			<%= f.input :password, :label=>"비밀번호", :autocomplete => "off", :required => false %>
			<%= f.input :password_confirmation, :label=>"비밀번호확인", :required => false %>
			<%= f.input :name, :label=>"이름", :required => true %>
  </div><center>
    <%= f.button :submit, "가입하기", :class=>"btn btn-primary" %></center>

<% end %>
<%= render "devise/shared/links" %>

</div>
<div class="span4">
		
		<center>
		<h4>페이스북으로 가입하기<h4>
			</center>
		<center>
		<a href="/users/auth/facebook" class="services"><img src="/facebook_64.png"></a>
		</center>
</div>
<div class="span2"></div>
</div>
