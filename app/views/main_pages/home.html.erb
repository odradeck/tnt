<% @lessons.each do |lesson| %>
 <div class='row-fluid'>
	<div class='span6'>
		<div class="well">
			<p>
				<%= lesson.today %>
			</p>
		</div>
	</div>
	<div class='span6'>
		<div class="well">
			<p>
				<%= lesson.tomorrow %>
			</p>
		</div>
	</div>
</div>
<% end %>