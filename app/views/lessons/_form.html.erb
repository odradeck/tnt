<%= simple_form_for(@lesson) do |f| %>
  <%= f.error_notification %>
  
  	<div class="well">
	<%= f.input :date, :label=>'<h4>교훈날짜</h4>' %>
	<div class='row-fluid'>
		<div class='span6'>
			<%= f.input :today, :label=>"<h4>오늘의 교훈</h4>", :input_html => { :rows => 3, :class=>"input-block-level" } %>
		</div>
		<div class='span6'>
			<%= f.input :tomorrow, :label=>"<h4>내일의 목표</h4>", :input_html => { :rows => 3, :class=>"input-block-level" } %>
		</div>
	</div>
	</div>


<center><button type="button" class="btn" data-toggle="collapse" data-target="#demo">세부기록</button></center>
<div id="demo" class="collapse"> 	 
	 
	 
	 
    <div class='row-fluid'>
		<div class='span6'>
			<%= f.input :dummylog, :label=>"<h4>일지</h4>", :input_html => { :rows => 8, :class=>"input-block-level"}  %>
		</div>
		<div class='span6'>
			<%= f.input :input, :label=>"<h4>배운거(Input)</h4>", :input_html => { :rows => 3, :class=>"input-block-level" } %>
			<%= f.input :output, :label=>"<h4>만든거(Output)</h4>", :input_html => { :rows => 3, :class=>"input-block-level" } %>
		</div>
	</div>
	
	<div class='row-fluid'>
		<div class='span9'>
	<h4>시간입력</h4>
	<div class='row-fluid'>
		<div class='span4'>
    <%= f.input :workinghour, :label=>"일한시간" %>
    <%= f.input :playinghour, :label=>"논시간" %>
		</div>
		<div class='span4'>
    <%= f.input :work_hardness, :label=>"오늘의 업무 강도는?", :collection=>[['아주널널',1],['널널함',2],['보통',3],['빡심',4],['아주빡심',5]] %>
    <%= f.input :body_condition, :label=>"오늘의 몸상태는 어떠신가요?", :collection=>[['최악',1],['별로에요',2],['보통',3],['좋아요',4],['날라다녀요',5]]  %>
    <%= f.input :mental_condition, :label=>"오늘의 마음은 어때요?", :collection=>[['더러움',1],['별로에요',2],['보통',3],['좋아요',4],['아주즐거워요',5]]  %>
		</div>
		<div class='span4'>
    <%= f.input :wakeuptime,:label=>"기상시간", :as=>:time, :include_blank => true, :input_html => {:style => "width:90px"} %>
    <%= f.input :sleeptime, :label=>"취침시간",  :include_blank => true, :input_html => {:style => "width:90px"}  %>
		</div>
	</div>
	</div>
	
    
    	<div class='span3'>
	    <h4>무슨운동했니?</h4>
	    <ul class="nav nav-pills">
	  		<li style="width:100px">달리기<%=f.input :ex_running, :label=>false%></li>
	  		<li style="width:100px">상체웨이트<%=f.input :ex_upper, :label=>false%></li>
	  		<li style="width:100px">하체웨이트<%=f.input :ex_lower, :label=>false%></li>
	  		<li style="width:100px">복부웨이트<%=f.input :ex_mid, :label=>false%></li>
	  		<li style="width:100px">스트레칭<%=f.input :ex_streching, :label=>false%></li>
		</ul>
		</div>
	</div>

    <center>
    	<div class='row-fluid'>
    	<div class='span6 offset3'>
    		<%= f.button :submit, "등 록 하 기", :class=>'btn btn-large btn-block btn-primary' %>
    	</div>
    	</div>
    </center>


</div>
	
<% end %>

