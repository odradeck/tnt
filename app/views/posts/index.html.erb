<h1>Listing posts</h1>

<table>
  <tr>
    <th>Board</th>
    <th>User</th>
    <th>B category</th>
    <th>Title</th>
    <th>Contents</th>
    <th>Addlink</th>
    <th>Isnotice</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.board_id %></td>
    <td><%= post.user_id %></td>
    <td><%= post.b_category_id %></td>
    <td><%= post.title %></td>
    <td><%= post.contents %></td>
    <td><%= post.addlink %></td>
    <td><%= post.isnotice %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

